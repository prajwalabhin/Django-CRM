{
    "version": 2,
    "builds": [
        {
            "src": "dcrm/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "dcrm/wsgi.py"
        }
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "dcrm.settings",
        "PYTHONUNBUFFERED": "1",
        "DB_NAME": "@db_name",   
        "DB_USER": "@db_user", 
        "DB_PASSWORD": "@db_password",   
        "DB_HOST": "@db_host",   
        "DB_PORT": "@db_port",   
        "DJANGO_SECRET_KEY": "@django_secret_key"  
    },
    "files": {
        "static": {
            "src": "website/static/**/*",
            "dest": "/static"
        }
    }
}
